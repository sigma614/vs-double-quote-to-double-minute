{
  "description": "Replace full-width double quotation marks (“”) and full-width double minutiae (〝〟).",
  "displayName": "double-quote-to-double-minute",
  "main": "./out/extension.js",
  "name": "vs-double-quote-to-double-minute",
  "version": "1.0.0",
  "categories": [
    "Formatters"
  ],
  "contributes": {
    "commands": [
      {
        "command": "double-quote-to-double-minute.toMinute",
        "title": "Double Quote To Double Minute",
        "enablement": "config.double-quote-to-double-minute.enabled"
      },
      {
        "command": "double-quote-to-double-minute.toQuote",
        "title": "Double Minute To Double Quote",
        "enablement": "config.double-quote-to-double-minute.enabled"
      }
    ],
    "configuration": {
      "title": "Double Quote To Double Minute",
      "properties": {
        "double-quote-to-double-minute.enabled": {
          "description": "Enable/disable this extension.",
          "type": "boolean",
          "default": true
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "double-quote-to-double-minute.toMinute",
          "group": "1_run@1",
          "when": "config.double-quote-to-double-minute.enabled && editorFocus"
        },
        {
          "command": "double-quote-to-double-minute.toQuote",
          "group": "1_run@2",
          "when": "config.double-quote-to-double-minute.enabled && editorFocus"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "vscode": "^1.83.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:sigma614/vs-double-quote-to-double-minute.git"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "mocha out/test/suite",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./"
  },
  "volta": {
    "node": "18.18.0",
    "npm": "10.2.0"
  }
}